{
  // Format & lint on save
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.css": "css"
  },
  "css.validate": false,
  // Tailwind CSS IntelliSense: ensure it runs in PostCSS/CSS/TSX
  "tailwindCSS.includeLanguages": {
    "plaintext": "javascript",
    "postcss": "css",
    "typescriptreact": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "files.watcherExclude": {
    "**/.next/**": true,
    "**/node_modules/**": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true
  },
  // Tailwind CSS IntelliSense
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)`",
    "clsx\\(([^)]*)\\)"
  ],
  // Show import sizes
  "importCost.showInlineWarnings": false,
  "importCost.includePackages": true,
  "cSpell.words": [
    "Albor",
    "Castorena",
    "Covarrubias",
    "Davila",
    "Flavio",
    "Ibarra",
    "Ovalle",
    "Sarmiento",
    "SHPE"
  ]
}