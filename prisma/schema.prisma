generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String?
  role         String   @default("eboard")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  eventsCreated Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  location    String?
  startTime   DateTime
  endTime     DateTime

  createdById Int?
  createdBy   User? @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
